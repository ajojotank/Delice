    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.delice.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_GroceryList"
        android:name="com.example.delice.ui.groceryList.GroceryListFragment"
        android:label="Grocery List"
        tools:layout="@layout/fragment_grocerylist" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.delice.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_recipeBook"
        android:name="com.example.delice.ui.recipeBook.RecipeBookFragment"
        android:label="Recipe Book"
